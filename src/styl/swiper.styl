/* ==========================================================================
   Base
   ========================================================================== */

// Breakpoints
break-1 = 'only screen and (min-width: 45em)'
break-2 = 'only screen and (min-width: 60em)'

// Colors
text-color = #59514f
bg-color = rgb(234,234,234)
beige = #f0ece9
brown = #d1c6b8
blue = #5badd6
orange = #d17c15

*
    box-sizing border-box

html
    font-family Courier, Courier New, monospace
    font-size 100%
    line-height 1.5
    color text-color
    background-color bg-color
    height 100%

body
    height 100%

main
    margin 0 auto
    max-width 750px
    height 100%
    > section
        height 100%
    @media break-1
        padding 3rem 0

article header h2
    line-height 1.2

article header span
    display inline-block
    line-height 1.2
    float right
    text-transform uppercase
    padding 0 .2em
    margin .4rem .6rem
    color beige
    background-color text-color


/* ==========================================================================
   Slider
   ========================================================================== */

.slider
    clearfix()
    padding 0
    margin 0
    list-style none
    transition left .3s ease-out
    position relative
    left 0
    height 100%
    > div
        float left
        padding 0 1rem
        height 100%
        overflow-y scroll

.slider-container
    position relative
    padding-top 4rem
    height 100%
    @media break-1
        margin 0 6rem

.slider-wrapper
    position relative
    overflow-x hidden
    overflow-y scroll
    width 100%
    height 100%

.slider-controls-wrapper
    width 100%
    position absolute
    top 0
    left 0
    right 0
    bottom 0

.slider-paging
    position relative
    width 100%
    height 4rem
    overflow-x scroll
    overflow-y hidden
    text-transform uppercase
    line-height .9
    font-size .9rem

.slider-paging ul
    clearfix()
    padding 0
    margin 0
    list-style none
    height 100%
    background-color brown
    li
        display table
        float left
        width 42%
        height 100%

.slider-paging a
    display table-cell
    padding .2rem .3rem
    width 100%
    height 100%
    text-decoration none
    color text-color
    border-width 3px
    border-style solid
    border-color alpha(black, .1)
    vertical-align bottom
    &[aria-selected='true']
        border-color orange
    @media break-1
        border-width 6px
        &:focus, &:hover
            background-color alpha(white, .2)

.slider-controls
    display none
    @media break-1
        display block
        position absolute
        top 50%
        left 50%
        width 100%
        max-width 750px
        transform translateX(-50%)

.slider-controls button
